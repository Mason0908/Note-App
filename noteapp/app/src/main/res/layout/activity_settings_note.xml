<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Font"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/bodyColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body Color"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_200"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="372dp"
        android:layout_height="49dp"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <RadioButton
            android:id="@+id/black_heading"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Black" />

        <RadioButton
            android:id="@+id/red_heading"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="Red" />

        <RadioButton
            android:id="@+id/blue_heading"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Blue" />

    </RadioGroup>


    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="367dp"
        android:layout_height="47dp"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

        <RadioButton
            android:id="@+id/black_body"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Black" />

        <RadioButton
            android:id="@+id/red_body"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="Red" />

        <RadioButton
            android:id="@+id/blue_body"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Blue" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="367dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/arial"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:text="Arial" />

        <RadioButton
            android:id="@+id/times"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/times"
            android:text="Times" />

        <RadioButton
            android:id="@+id/courier"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/courier"
            android:text="Courier" />
    </RadioGroup>

    <TextView
        android:id="@+id/headingColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heading Color"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0" />
